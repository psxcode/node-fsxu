# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,css,scss,html}]
charset = utf-8
indent_style = tab

[*.{js,css,html}]
tab-width = 4

[*.scss]
tab-width = 2

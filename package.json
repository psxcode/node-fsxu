{
	"name": "fsxu",
	"version": "0.2.0",
	"description": "minimal filesystem utility functions inspired by fs-extra",
	"main": "dist/index.js",
	"scripts": {
		"test": "nyc npm run mocha && npm run report",
		"test:watch": "npm run mocha -- --watch",
		"report": "opn ./coverage/lcov-report/index.html",
		"build": "npm run rollup",
		"clean": "rimraf dist coverage .rpt2_cache .nyc_output",
		"mocha": "mocha --opts mocha.opts",
		"rollup": "rollup -c rollup.config.js",
		"bump-patch": "npm version patch",
		"bump-minor": "npm version minor",
		"bump-major": "npm version major"
	},
	"nyc": {
		"extension": [
			".ts"
		],
		"include": [
			"lib/*.ts"
		],
		"exclude": [
			"**/*.d.ts",
			"**/*.spec.ts",
			"lib/index.ts"
		],
		"reporter": [
			"lcov",
			"text-summary"
		],
		"all": true
	},
	"author": {
		"name": "Alex Feinstein",
		"url": "https://github.com/psxcode"
	},
	"license": "MIT",
	"homepage": "https://github.com/psxcode/node-fsxu",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/psxcode/node-fsxu"
	},
	"dependencies": {},
	"devDependencies": {
		"@types/chai": "^4.0.2",
		"@types/mocha": "^2.2.41",
		"@types/node": "^8.0.20",
		"chai": "^3.5.0",
		"chai-fs": "^1.0.0",
		"istanbul": "^0.4.5",
		"mocha": "^3.5.0",
		"mock-fs": "^4.4.1",
		"nyc": "^11.1.0",
		"opn-cli": "^3.1.0",
		"rimraf": "^2.6.1",
		"rollup": "^0.45.2",
		"rollup-plugin-typescript": "^0.8.1",
		"rollup-plugin-typescript2": "^0.5.0",
		"source-map-support": "^0.4.15",
		"ts-node": "^3.3.0",
		"typescript": "^2.4.2"
	},
	"keywords": [
		"fs",
		"file",
		"file system",
		"copy",
		"directory",
		"extra",
		"mkdirp",
		"mkdir",
		"mkdirs",
		"recursive",
		"json",
		"read",
		"write",
		"extra",
		"delete",
		"remove",
		"touch",
		"create",
		"text",
		"output",
		"move"
	]
}
